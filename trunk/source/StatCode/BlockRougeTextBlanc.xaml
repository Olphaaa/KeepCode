<UserControl x:Class="StatCode.BlockRougeTextBlanc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StatCode"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Background="#bf2525" Margin="5" CornerRadius="10"/>
        <TextBlock Grid.Column="0" Text="Message :" x:Name="leText" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="White" Margin="0,0,10,0" TextWrapping="Wrap" FontSize="16"/>
        <TextBlock Grid.Column="1" Text="Information" x:Name="lInformation" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"  FontSize="16" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
